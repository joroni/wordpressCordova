<?xml version='1.0' encoding='utf-8'?>
<widget id="net.witr.wcordova.login" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>wCordovaLogin</name>
    <description>
        A sample Apache Cordova login application.
    </description>
    <author email="witr.net@gmail.com" href="http://witr.net">
        witrdotnet
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
